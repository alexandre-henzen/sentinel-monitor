{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=eam;Username=eam_user;Password=eam_pass",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "SecretKey": "your-super-secret-key-here-must-be-at-least-32-characters-long",
    "Issuer": "EAM.API",
    "Audience": "EAM.Agents",
    "ExpiryMinutes": 1440
  },
  "Storage": {
    "Type": "MinIO",
    "MinIO": {
      "Endpoint": "localhost:9000",
      "AccessKey": "minioadmin",
      "SecretKey": "minioadmin",
      "BucketName": "eam-screenshots",
      "UseSSL": false
    }
  },
  "Telemetry": {
    "ServiceName": "EAM.API",
    "ServiceVersion": "5.0.0",
    "OtlpEndpoint": "http://localhost:4317",
    "EnableMetrics": true,
    "EnableTracing": true,
    "EnableLogging": true
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "RequestsPerMinute": 100,
    "BurstSize": 10
  }
}