  "PerformanceThresholds": {
    "MaxCpuUsagePercent": 2.0,
    "MaxMemoryUsageMB": 100,
    "MaxEventsPerSecond": 10000,
    "MaxResponseTimeMS": 1000,
    "MinScreenshotSuccessRate": 99.5,
    "MaxEventLossPercent": 0.1
